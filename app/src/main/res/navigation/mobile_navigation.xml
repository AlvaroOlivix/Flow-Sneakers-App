<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/sneakersFragment">

    <fragment
        android:id="@+id/sneakersFragment"
        android:name="com.olivix.flow_snikers_app.feature.sneaker.presentation.SneakersFragment"
        android:label="fragment_sneakers"
        tools:layout="@layout/fragment_sneakers">

        <action
            android:id="@+id/action_sneakersFragment_to_sneakerDetailFragment"
            app:destination="@id/sneakerDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/sneakerDetailFragment"
        android:name="com.olivix.flow_snikers_app.feature.sneaker.presentation.SneakerDetailFragment"
        android:label="SneakerDetailFragment"
        tools:layout="@layout/fragment_detail_sneaker">
        <argument
            android:name="sneakerId"
            app:argType="string" />
    </fragment>

</navigation>