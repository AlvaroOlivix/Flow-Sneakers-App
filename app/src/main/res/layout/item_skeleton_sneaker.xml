<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/skeletonLayout"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/md_theme_secondaryContainer_mediumContrast"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Imagen cuadrada gris -->
                <View
                    android:id="@+id/placeholderImage"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@color/cardview_shadow_end_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- CorazÃ³n simulado -->


                <!-- Nombre zapatilla -->
                <View
                    android:id="@+id/placeholderName"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:background="@color/md_theme_secondaryContainer_mediumContrast"
                    app:layout_constraintBottom_toTopOf="@id/placeholderOfert"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/placeholderImage" />

                <!-- Precio -->
                <View
                    android:id="@+id/placeholderOfert"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/md_theme_secondaryContainer_mediumContrast"
                    app:layout_constraintBottom_toTopOf="@id/placeholderPrice"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/placeholderPrice"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/md_theme_secondaryContainer_mediumContrast"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.faltenreich.skeletonlayout.SkeletonLayout>
